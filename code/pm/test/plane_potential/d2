#============================================================#
#                                                            #
#                  test plane potential                      #
#                                                            #
# use contact potential.                                     #
#============================================================#
system echo = off
system verbose = false

# set units
#----------
units scale  name=mass   uname=reducedMass   value=10000.0

# open pdb file
#--------------
database open name= neck_xform  format=pdb file= two_necks.pdb

# read molecule
#--------------
molecule read  database= neck_xform  name=m1  model=1  type=protein

# create domains
#---------------
domain create hc=C
domain hc  backbone  color=[ 0.6 0.6 0.6 ] width=1 show
domain create iq1=AC[760-788]
domain iq1 backbone tube=true color=[ 1 0 0 ] width=1 show=true

domain create iq2=BC[788-814]
domain iq2 backbone tube=true color=[ 0 1 0 ] width=2 show=true

domain create iq3=DC[814-836]
domain iq3 backbone tube=true color=[ 0 0 1 ] width=2 show=true

#--------------------------------------------------------------#
#                      create bodies                           #
#--------------------------------------------------------------#
# 1st group
#----------
body create  name=ground    type=ground
body create  name=iq1_body  type=rigid   domain=iq1
body create  name=iq2_body  type=rigid   domain=iq2
body create  name=iq3_body  type=rigid   domain=iq3


#--------------------------------------------------------------#
#                      create joints                           #
#--------------------------------------------------------------#
# 1st group
#----------
joint create  name=jnt1   type=ball    domain=hc    res=C[760]    use=CA
joint jnt1 bodies={ ground iq1_body }
joint jnt1 color=[ 1 0 0 ] msize=0.1 shading=color show=true 

joint create  name=jnt2   type=ball    domain=hc    res=C[788]    use=CA
joint jnt2 bodies={ iq1_body iq2_body }
joint jnt2 color=[ 0 1 0 ] msize=0.1 shading=color show=true

joint create  name=jnt3   type=ball    domain=hc    res=C[814]    use=CA
joint jnt3 bodies={ iq2_body iq3_body }
joint jnt3 color=[ 0 0 1 ] msize=0.1 shading=color show=true 

#--------------------------------------------------------------#
#                 create a rigid simulation                    #
#--------------------------------------------------------------#

simulation create name=rsim  type=rigid

# add bodies
#-----------
simulation rsim add body=ground
simulation rsim add body=iq1_body
simulation rsim add body=iq2_body
simulation rsim add body=iq3_body

body iq1_body  damping=1.0
body iq2_body  damping=1.0
body iq3_body  damping=1.0


# add joints
#-----------
simulation rsim add joint=jnt1
simulation rsim add joint=jnt2
simulation rsim add joint=jnt3


# set solver
#-----------
simulation rsim solver=ode
simulation rsim solver finite_rotation=on


# add forces
#-----------
force create name=force1           \
             type=explicit         \
             point=[ 0 0 0 ]       \
             direction=[ 0 -10 0 ] \
             scale=1.0

simulation rsim add force=force1    \
                    body=iq3_body   \
                    time={ 0 2 }

force create name = force2   \
             type = random   \
             mean = 0.0      \
             sd =  20.0      \
             seed = 147321   \
             scale = 0.1

simulation rsim add force = force2    \
                    body = iq3_body   \
                    time = { 0 inf}


# add spring interaction potential
#---------------------------------
domain iq1 define region=iq1_rgn  residues=A[7-19] 
domain iq2 define region=iq2_rgn  residues=B[102-113] 
domain iq2 define region=iq2_hrgn residues=C[809-813] 
domain iq3 define region=iq3_hrgn residues=C[814-818] 

body iq1_body add potential_geometry=iq1_spring  \
                  region=iq1_rgn                 \ 
                  geometry=points                \
                  show=false              

body iq2_body add potential_geometry=iq2_spring \
                  region=iq2_rgn                \
                  geometry=points               \
                  show=false 

body iq2_body add potential_geometry=iq2_spring_h \
                  region=iq2_hrgn                 \
                  geometry=points                 \
                  show=false 

body iq3_body add potential_geometry=iq3_spring_h  \
                  region=iq3_hrgn                  \
                  geometry=points                  \
                  show=false 

simulation rsim add interaction=spring1              \
                    type=spring                      \
                    force_const=10                     \
                    cutoff=0.5                       \
                    list={ iq1_spring  iq2_spring iq2_spring_h iq3_spring_h }  \
                    color=[1 1 0] show=true        \
                    time={ 0.0 inf }


# plane potential 
#----------------
domain iq1 define region=iq1_prgn residues=A
domain iq2 define region=iq2_prgn residues=B
domain iq3 define region=iq3_prgn residues=D

body iq1_body add potential_geometry=iq1PointGeom \
     region=iq1_prgn                              \
     geometry=points                              \
     color=[0.6 0 0] show=true

body iq2_body add potential_geometry=iq2PointGeom \
     region=iq2_prgn                              \
     geometry=points                              \
     color=[0 0.6 0] show=true

body iq3_body add potential_geometry=iq3PointGeom \
     region=iq3_prgn                              \
     geometry=points                              \
     color=[0 0 0.6]  show=true

body ground add potential_geometry=planeGeom        \
            geometry=plane                          \
            point=[-0.0716998 -0.0150192 0.0680703] \
            normal=[0 1 0]                          \
            scales=[10 10 1]  show=true

simulation rsim add interaction=plainInt            \
           type=contact                               \
           strength=10                                \
           association=full                           \
           list1={ planeGeom }                      \
           list2={ iq1PointGeom iq2PointGeom iq3PointGeom }      \
           color=[0 0.6 0.6] show=true                \
           time={ 0 inf }


# add another plane potential
#----------------------------
variable pt=[4.3625 10.5563 3.2368]   
pt=[0.0 9.0 0]   

body ground add potential_geometry=planeGeom2   \
            geometry=plane                      \
            point=${pt}                         \
            normal=[0 -1 0]                     \
            scales=[10 10 1]  show=true

simulation rsim add interaction=plainInt2       \
           type=contact                         \
           strength=10                          \
           association=full                     \
           list1={ planeGeom2 }                 \
           list2={ iq2PointGeom iq3PointGeom }  \
           color=[0 0.6 0.6] show=true          \
           time={ 0 inf }


# initialize simulation
#----------------------
simulation rsim initialize
simulation rsim momentum=on 
simulation rsim time step=0.01
simulation  state  save_frequency=20
simulation rsim damping=on


# add trace
#----------
simulation rsim  add trace  name=trace1  \
           global_frame=true             \
           point=iq3:D                   \
           body=iq3_body                 \
           color=[ 0 0 1 ]   show=true

simulation rsim  add trace  name=trace2  \
           global_frame=true             \
           point=iq2:B                   \
           body=iq2_body                 \
           color=[ 0 1 0 ]   show=true


simulation rsim  add trace  name=trace3  \
           global_frame=true             \
           point=iq1:A                   \
           body=iq1_body                 \
           color=[ 1 0 0 ]   show=true

graphics background color=[0.5 0.5 0.7]

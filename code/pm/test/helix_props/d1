
#============================================================*
#               test domain fitting                          *
#============================================================*

# open pdb file
database open name = neck format = pdb  file = ../data/neck_xform.pdb

# read molecule
molecule read  name = m1   database = neck


# create a some domains
#----------------------
domain create iq1 = AC[760-788]
domain iq1 backbone color = [ 1 0 0 ] width = 1 show=true

domain create iq2 = BC[788-814]
domain iq2 backbone color = [ 0 1 0 ] width = 1 show=true

domain create iq3 = DC[814-836]
domain iq3 backbone color = [ 0 0 1 ] width = 1 show=true


# fit iq1 to iq2
#---------------

domain iq1 fit  sequence = C[770-771]               \
                destination = iq2                   \
                destination_sequence = C[798-799]   \
                atom_names = { O C CA }         

domain iq1 backbone name = fit color = [ 1 1 1 ] width = 2 show=true


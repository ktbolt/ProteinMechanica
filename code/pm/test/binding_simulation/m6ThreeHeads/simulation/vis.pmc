#------------------------------------------------------#
# define actin filament                                #
#------------------------------------------------------#
database open name=acstructuresDb format=pdb file=structure.pdb
molecule read name=acstructuresMol database=acstructuresDb model_name=actin

domain create actin1=ACEGIKMOQSUWY
domain actin1 backbone color=[0.8 0.8 0] width=2 show=true
domain create actin2=BDFHJLNPRTVX
domain actin2 backbone color=[0.0 0.8 0.5] width=2 show=true

domain create actinG=G
domain create actinH=H
